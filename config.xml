<configuration>
    <mqtt>
        <listeners>
            <tcp-listener>
                <port>${HIVEMQ_MQTT_PORT}</port>
                <bind-address>0.0.0.0</bind-address>
            </tcp-listener>
            <websocket-listener>
                <port>${HIVEMQ_MQTT_PORT}</port>
                <bind-address>0.0.0.0</bind-address>
                <path>/mqtt</path>
            </websocket-listener>
        </listeners>
    </mqtt>
</configuration>
